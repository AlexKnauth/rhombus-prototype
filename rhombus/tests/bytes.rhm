block:
  use_static
  def hello = #"hello"
  check:
    #"hello".length() ~is 5
    hello.length() ~is 5
    #"hello".subbytes(1) ~is #"ello"
    #"hello".subbytes(1, 4) ~is #"ell"
    #"h\303\211llo".utf8_string() ~is "hÉllo"
    #"h\303\211llo".utf8_string(#false, 3) ~is "llo"
    #"h\311llo".latin1_string() ~is "hÉllo"
