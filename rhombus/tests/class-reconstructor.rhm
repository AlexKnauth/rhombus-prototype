#lang rhombus

use_static

// some `with` tests are in "class.rhm"

check:
  ~eval
  class Posn(x, y):
    opaque
  Posn(1, 2) with (x = 10)
  ~raises "value does not support functional update"

check:
  ~eval
  class Posn(x, y):
    constructor (z):
      super(z+1, z-1)
  Posn(0) with (x = 1)
  ~raises "value does not support functional update"

block:
  import rhombus/static/meta open
  class Posn(x, y):
    internal _Posn
    expression 'Posn < $x $y >':
      '_Posn($x, $y) :~ Posn'
    reconstructor (x, y):
      Posn < x  y >
  def p = Posn< 1 2 >
  check p.x ~is 1
  check p.y ~is 2
  check p with (x = 10) ~is Posn< 10 2 >
  check (p with (x = 10)).y ~is 2

block:
  class Posn(x, y):
    nonfinal
  class Posn3D(z):
    extends Posn
    reconstructor(x, y, z = this.z):
      Posn3D(x, y, z+1)  
  check Posn3D(1, 2, 3) with (x = 10) ~is Posn3D(10, 2, 4)
  check Posn3D(1, 2, 3) with (x = 11, z = 8) ~is Posn3D(11, 2, 9)
  check (Posn3D(1, 2, 3) :: Posn) with (x = 10) ~is Posn3D(10, 2, 4)
  block:
    use_dynamic
    check dynamic(Posn3D(1, 2, 3)) with (w = -1) ~raises "no such public field in class"
    check (Posn3D(1, 2, 3) :: Posn) with (z = 30) ~is Posn3D(1, 2, 31)

block:
  class Posn(x, y):
    nonfinal
  class Posn3D(z):
    extends Posn
    nonfinal
    reconstructor(x, y, z = this.z):
      Posn3D(x, y, z+1)  
  class Posn4D(w):
    extends Posn3D
  check Posn3D(1, 2, 3) with (x = 10) ~is Posn3D(10, 2, 4)
  check Posn4D(1, 2, 3, 4) with (x = 10) ~is Posn4D(10, 2, 3, 4)

check:
  ~eval
  use_static
  class Posn(x, y):
    nonfinal
  fun (): Posn(1, 2) with (z = 3)
  ~raises "no such public field in class"

check:
  ~eval
  class Posn(x, y):
    nonfinal
  fun (): Posn(1, 2) with (z = 3)
  ~completes

block:
  class Posn(x, y):
    nonfinal
    internal _Posn
    constructor ():
      super(0, 0)
  class Posn3D(z):
    extends Posn  
    internal _Posn3D
    constructor (z):
      super()(z)
    reconstructor(x, y, z):
      _Posn3D()(z)
  def p = Posn3D(3) with (z = 30)
  check p.x ~is 0
  check p.y ~is 0
  check p.z ~is 30
