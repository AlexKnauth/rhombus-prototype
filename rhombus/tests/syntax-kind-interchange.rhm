#lang rhombus

check:
  match '1 2 3 0'
  | '$a ...': '$a ...'
  ~prints_like  '1 2 3 0'

check:
  match '1 2 3 0'
  | '$a ...': [a, ...]
  ~prints_like  ['1', '2', '3', '0']
  
check:
  match '1 2; 3 0'
  | '$a; ...': '$a; ...'
  ~prints_like '1 2; 3 0'

check:
  match '1 2; 3 0'
  | '$a; ...': [a, ...]
  ~prints_like ['1 2', '3 0']

check:
  match '1 2 3 0'
  | '$a ... 0': '$a ...'
  ~prints_like '1 2 3'

check:
  match '1 2 3 0'
  | '$a ...': '($a, ...)'
  ~prints_like '(1, 2, 3, 0)'

check:
  match '1 2 3'
  | '$a ...': '$a; ...'
  ~prints_like '1; 2; 3'

check:
  match '1; 2 4; 3'
  | '$a; ...': '$a ...'
  ~raises "multi-term syntax not allowed in term context"

check:
  match '(1) (2 + 7, 14) (3)'
  | '($a) ...': [a, ...]
  ~prints_like ['1', '2 + 7; 14', '3']

check:
  match '1 + 2'
  | '$a + $b': '($a)'
  ~prints_like '(1)'
