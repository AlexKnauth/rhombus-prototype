#lang rhombus

check:
  Syntax.make(1)
  ~prints_like '1'

check:
  Syntax.make([1, 2])
  ~raises "invalid as a shrubbery term"

check:
  Syntax.make([symbol(parens), [symbol(group), 1, "a", symbol(z)]])
  ~prints_like '(1 "a" z)'

check:
  Syntax.make([symbol(parens),
               [symbol(group), 1],
               [symbol(group), "a"],
               [symbol(group), [symbol(op), symbol(#{+})]]])
  ~prints_like '(1, "a", +)'

check:
  Syntax.make([symbol(parens), '1', '"a"', '+'])
  ~prints_like '(1, "a", +)'

check:
  Syntax.make([symbol(parens), '1 2 3', '"a"', '4 + 5'])
  ~prints_like '(1 2 3, "a", 4 + 5)'

check:
  Syntax.make(['block', '1 2', '3'])
  ~prints_like ': 1 2; 3'

check:
  Syntax.make_group([1, 2])
  ~prints_like '1 2'

check:
  Syntax.make_group(['begin', ['block', '1 2', '3']])
  ~prints_like 'begin: 1 2; 3'

check:
  Syntax.make(['block'])
  ~prints_like ':«»'

check:
  Syntax.make_group(['begin', ['block', '1 2', '3'], 'more'])
  ~raises "invalid as a shrubbery non-tail term"

check:
  Syntax.make_group([])
  ~raises "NonemptyList"

check:
  Syntax.make([symbol(parens), Syntax.make_group([1])])
  ~prints_like '(1)'

check:
  Syntax.make_sequence(['a', 'b c', 'd e f'])
  ~prints_like 'a; b c; d e f'

check:
  Syntax.unwrap('x')
  ~is symbol(x)

check:
  Syntax.unwrap('(1 2 3)')
  ~prints_like ['parens', '1 2 3']

check:
  Syntax.unwrap('(1, 2, 3)')
  ~prints_like ['parens', '1', '2', '3']

check:
  Syntax.unwrap_sequence('1 2; 3 4 5')
  ~prints_like ['1 2', '3 4 5']

check:
  Syntax.unwrap_sequence('1 2')
  ~prints_like ['1 2']

check:
  Syntax.unwrap_sequence('1')
  ~prints_like ['1']
