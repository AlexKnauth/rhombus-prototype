#lang rhombus

check:
  Pair(1, 2)
  ~is Pair.cons(1, 2)

check:
  Pair
  ~is Pair.cons

check:
  Pair(1, [2])
  ~is [1, 2]

check:
  def p :: Pair = [1, 2]
  p
  ~is [1, 2]

check:
  Pair.first(1)
  ~raises values("contract violation", "expected: Pair")

check:
  Pair("ok", "oops") :: Pair.of(String, Number)
  ~raises "does not satisfy annotation"

check:
  ["ok", "oops"] :: Pair.of(String, Number)
  ~raises "does not satisfy annotation"

check:
  ["ok", "fine"] :: Pair.of(String, List)
  ~is ["ok", "fine"]

begin:
  use_static
  check:
    Pair(1, 2).first
    ~is 1
  check:
    Pair(1, 2).rest
    ~is 2
  check:
    Pair.cons(1, 2).first
    ~is 1
  check:
    Pair.cons(1, 2).rest
    ~is 2
  check:
    def x :: Pair = [1, 2, 3]
    x.first
    ~is 1
  check:
    def Pair(x, y) = [1, 2, 3]
    x
    ~is 1
  check:
    (["ok", "fine"] :: Pair.of(String, List)).rest
    ~is ["fine"]
  check:
    def Pair(x :: List, y) = [[1, 2, 3]]
    x.length()
    ~is 3
  check:
    (["ok", "fine"] :: Pair.of(String, List)).rest.length()
    ~is 1
  check:
    def x :: Pair.of(List, Any) = [[1, 2, 3]]
    x.first.length()
    ~is 3

begin:
  check:
    dynamic(Pair(1, 2)).first
    ~is 1
  check:
    dynamic(Pair(1, 2)).rest
    ~is 2
