#lang rhombus
import: "check.rhm" open

begin:
  def [x, ...] = [1, 2, 3]
  def [[y, ...], ...] = [["a", "b", "c"], ["A", "B", "C"]]
  def [[z, ...], _] = [["a", "b", "c"], ["A", "B", "C"]]
  def [_, &[q]] = [["a", "b", "c"], ["A", "B", "C"]]
  def [_, &[w, ...]] = [["a", "b", "c"], ["A", "B", "C"]]

  check:
    [x, ...]
    [1, 2, 3]
  check:
    ~print
    '[($y) ...] ...'
    '[("a") ("b") ("c")] [("A") ("B") ("C")]'
  check:
    ~print
    '[($z) ...]'
    '[("a") ("b") ("c")]'
  check:
    q
    ["A", "B", "C"]
  check:
    [w, ...]
    [["A", "B", "C"]]

begin:
  def [x, ...] = [1, 4, 3]
  def four = 4
  check:
    [!(x == four), ...]
    [#true, #false, #true]
  check:
    [(x + (- four)), ...]
    [-3, 0, -1]
  check:
    operator (x %% y): [x, y]
    [x %% four, ...]
    [[1, 4], [4, 4], [3, 4]]

begin:
  def [x, ...] = [1, 2, 3]
  check:
    fun f(x, y): {x: y}
    [f(x, 0), ...]
    [{1: 0}, {2: 0}, {3: 0}]    
  check:
    fun f(~x: x, y): {x: y}
    [f(~x: x, 0), ...]
    [{1: 0}, {2: 0}, {3: 0}]
  check:
    fun f(& vs): vs
    [f(x, x, ...), ...]
    [[1, 1, 2, 3], [2, 1, 2, 3], [3, 1, 2, 3]]

begin:
  def [x, ...] = [[1], [2, 3]]
  check:
    fun f(& vs): vs
    [f(&x), ...]
    [[1], [2, 3]]

begin:
  def [[x, ...], ...] = [[1, 2, 3], [4, 5]]
  check:
    fun f(v, ...): [[v, ...]]
    [f(x, ...), ...]
    [[[1, 2, 3]], [[4, 5]]]
  check:
    fun f(v, ...): [v, ...]
    [f(x+1, ...), ...]
    [[2, 3, 4], [5, 6]]

begin:
  def [x, ...] = [{keyword'~a': "a"}, {keyword'~b': "b"}]
  fun f(~a: a = #false, ~b: b = #false): [a, b]
  check:
    [f(~& x), ...]
    [["a", #false], [#false, "b"]]

check:
  use_static
  class Posn(x, y)
  def [x, ...] = [1, 2, 3]
  [Posn(x, x), ...][1].x
  2
