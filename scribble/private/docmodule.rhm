#lang rhombus

import:
  rhombus/macro:
    no_prefix
  scribble/manual:
    expose: defmodule racketmodname
  "rhombus.rhm":
    no_prefix
  racket/base:
    for_meta
  rhombus:
    for_label
    expose: import
   

export:
  docmodule
  rhombusmodname

for_meta:
  fun translate_mod(mod):
    match mod
    | '($(a $: Id)): a
    | '($a / $b ...):
        base.#{string->symbol}(unwrap_syntax(a)
                                 & "/"
                                 & unwrap_syntax(translate_mod('($b ...))))
    | '(lib($str)):
        [symbol(lib), str]

decl.macro '(docmodule ($mod ...)):
  '(: $(parsed(['defmodule,
                keyword(#{#:require-form}),
                unparsed('(fun (mod): @rhombus[import: $$(mod)])),
                translate_mod('($mod ...))])))

expr.macro '(rhombusmodname ($mod ...) $tail ......):
  values(parsed(['racketmodname, translate_mod('($mod ...))]),
         tail)
